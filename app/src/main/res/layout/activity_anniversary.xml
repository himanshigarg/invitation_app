<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg32">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="4">

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:src="@drawable/ann_1"
                android:id="@+id/imbtn1" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_marginTop="10dp"
                android:layout_height="240dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ann_2"
                android:id="@+id/imbtn2"/>
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"

                android:layout_width="160dp"
                android:layout_height="240dp"
                android:src="@drawable/ann_3"
                android:id="@+id/imbtn3"/>

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                android:layout_width="160dp"
                android:layout_height="240dp"
                android:src="@drawable/ann_4"
                android:id="@+id/imbtn4"/>


            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"

                android:layout_width="160dp"
                android:layout_height="240dp"
                android:src="@drawable/ann_5"
                android:id="@+id/imbtn5"/>

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                android:layout_width="160dp"
                android:layout_height="240dp"
                android:src="@drawable/ann_6"
                android:id="@+id/imbtn6"/>

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                android:layout_width="160dp"
                android:layout_height="240dp"
                android:src="@drawable/ann_7"
                android:id="@+id/imbtn7"/>



            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                android:layout_width="160dp"
                android:layout_height="240dp"
                android:src="@drawable/ann_8"
                android:id="@+id/imbtn8"/>

        </GridLayout>




    </ScrollView>


</LinearLayout>